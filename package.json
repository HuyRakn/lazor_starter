{
  "name": "lazor-starter",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready Universal Monorepo Starter for Lazorkit SDK - Web & Mobile",
  "scripts": {
    "dev": "turbo run dev",
    "dev:mobile": "cd apps/mobile && pnpm dev",
    "dev:web": "cd apps/web && pnpm dev --experimental-https",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "ignore-loader": "^0.1.2",
    "null-loader": "^4.0.1",
    "turbo": "^2.3.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "@coral-xyz/anchor": "0.31.1",
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3",
      "ws": "^8.18.0"
    }
  },
  "dependencies": {
    "ws": "^8.18.0"
  }
}
